{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/LitAndPrayerOptions.jsx", "components/CampusMinistryDisplay.jsx", "components/ExpandableTestimony.jsx", "components/UpcomingEvents.jsx", "components/ChurchInfo.jsx", "components/ContactCard.jsx", "components/EventsPageWeeklyGrid.jsx", "components/HomepageSlideshow.jsx", "components/PageBanner.jsx", "components/Testimonies.jsx", "components/Saint2.jsx", "components/Saint1.jsx", "components/EventsPageUpcomingGrid.jsx"],
  "exclude": ["node_modules"]
}
